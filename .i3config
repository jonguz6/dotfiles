general {
        output_format = "i3bar"
        colors = false
        interval = 5
}

#order += "ipv6"
#order += "run_watch DHCP"
#order += "run_watch VPNC"
#order += "path_exists VPN"
order += "wireless wlp4s0"
order += "net_rate"
order += "ethernet enp2s0"
order += "volume master"
#order += "battery 0"#
order += "disk /"
#order += "cpu_usage"
order += "sysdata"
order += "cpu_temperature 0"
order += "keyboard_layout"
order += "tztime local"
#order += "tztime berlin"

wireless wlp4s0 {
        format_up = " %ip (%essid)"
        format_down = ""
}

net_rate {
	interfaces = enp2s0
	hideifzero = true
	format = "{down}"
	precision = 0
}

ethernet enp2s0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = " %ip (%speed) "
        format_down = "Ethernet is down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = ""
        status_chr = ""
        status_bat = ""
        status_full = ""
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = " %Y-%m-%d %H:%M:%S"
}

tztime berlin {
        format = "%Y-%m-%d %H:%M:%S %Z"
        timezone = "Europe/Berlin"
}

cpu_usage {
        format = " %usage"
}

cpu_temperature 0 {
        format = " %degrees°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp2_input"
}

# control the volume with your mouse (need >i3-4.8)
# launch alsamixer when I left click
# kill it when I right click
# toggle mute/unmute when I middle click
# increase the volume when I scroll the mouse wheel up
# decrease the volume when I scroll the mouse wheel down
volume master {
    format = " %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
    on_click 1 = "exec terminator -e alsamixer"
    on_click 2 = "exec amixer set PCM toggle"
    on_click 3 = "exec killall alsamixer"
    on_click 4 = "exec amixer sset Master 1%+"
    on_click 5 = "exec amixer sset Master 1%-"
}

disk "/" {
        format = " %free"
	on_click 1 = "exec thunar /"
}

keyboard_layout {
	format = "{layout}"
}

sysdata {
	format = " {cpu_usage}  {mem_used}GB/{mem_total}GB"
	high_treshlod = "99"
	med_treshold = "98"
	colors = false
 }
